@using PierresTracker.Models

<!DOCTYPE html>
<html>
  <head>
    <title>Vendors</title>
    <link 
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css" 
      rel="stylesheet" 
      integrity="sha384-rbsA2VBKQhggwzxH7pPCaAqO46MgnOM80zW1RWuH61DGLwZJEdK2Kadq2F9CUG65" 
      crossorigin="anonymous">
      <link rel="stylesheet" type="text/css" href="~/css/vendorIndex.css" />
    <meta charset='utf-8'>
  </head>
  <body>
    <div class="page-style">
      <div class="vendor-list">
        <h1>Current Vendors</h1>
        @if (Model.Count == 0)
        {
          <p>No current vendors. Add one below!</p>
        } else
        {
          @foreach (Vendor vendor in Model)
          {
            <a href="/vendors/@vendor.Id/orders">@vendor.Name</a>
            <i><p>@vendor.Description</p></i>
          }
        }
      </div>
      <div class="nav-buttons">
        <form action="/vendors/new" method="get">
          <button id="new-vendor-btn" type="submit">Add a New Vendor</button>
        </form>
        <form action="/" method="get">
          <button type="submit">Home Page</button> 
        </form>
      </div>
    </div>
    @* <a href="/vendors/new">Add a new vendor</a> *@
    @* <a href="/">Home Page</a> *@
  </body>
</html>